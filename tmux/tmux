unbind r
bind r source-file ~/.tmux.conf \; display-message "Reloading config..."

set -g prefix C-s

set -g mode-keys vi
bind-key h select-pane -L
bind-key j select-pane -D
bind-key k select-pane -U
bind-key l select-pane -R

set -g status-position top

# List of plugins
set -g @plugin "tmux-plugins/tpm"
set -g @tpm-clean "u"

set -g @plugin "christoomey/vim-tmux-navigator"

set -g @plugin "catppuccin/tmux"
set -g @catppuccin_window_left_separator ""
set -g @catppuccin_window_right_separator " "
set -g @catppuccin_window_middle_separator " █"
set -g @catppuccin_window_number_position "right"
set -g @catppuccin_window_status_enable "no"
set -g @catppuccin_window_default_color "#fef7f3"
set -g @catppuccin_window_default_fill "number"
set -g @catppuccin_window_default_text "#W"
set -g @catppuccin_window_current_fill "number"
set -g @catppuccin_window_current_text "#W"
set -g @catppuccin_status_modules_right "gitmux directory cpu weather date_time battery"
set -g @catppuccin_status_left_separator  " "
set -g @catppuccin_status_right_separator ""
set -g @catppuccin_status_fill "icon"
set -g @catppuccin_status_connect_separator "no"
set -g @catppuccin_gitmux_text "#(gitmux -cfg $HOME/.gitmux.conf \"#{pane_current_path}\")"
set -g @catppuccin_directory_text "#{pane_current_path}"
set -g @catppuccin_date_time_text "%a %d-%m-%y %H:%M"

set -g @plugin "tmux-plugins/tmux-battery"

set -g @plugin "tmux-plugins/tmux-cpu"

set -g @plugin "xamut/tmux-weather"
set-option -g @tmux-weather-location "Helsinki"
set-option -g @tmux-weather-interval 1

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run "~/.tmux/plugins/tpm/tpm"
